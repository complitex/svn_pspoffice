<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <context-param>
        <param-name>configuration</param-name>
        <param-value>development</param-value>
    </context-param>

    <filter>
        <filter-name>wicket</filter-name>
        <filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
        <init-param>
            <param-name>applicationClassName</param-name>
            <param-value>org.complitex.template.web.ComplitexWebApplication</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>wicket</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <security-role>
        <role-name>AUTHORIZED</role-name>
    </security-role>
      <security-role>
        <role-name>ADMIN_MODULE_EDIT</role-name>
    </security-role>
    <security-role>
        <role-name>ADDRESS_MODULE_EDIT</role-name>
    </security-role>

     <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>pspofficeRealm</realm-name>
        <form-login-config>
            <form-login-page>/?wicket:bookmarkablePage=:org.complitex.pspoffice.commons.web.pages.login.Login</form-login-page>
            <form-error-page>/?wicket:bookmarkablePage=:org.complitex.pspoffice.commons.web.pages.login.Login&amp;error</form-error-page>
        </form-login-config>
    </login-config>
</web-app>
