<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.complitex.dictionaryfw.entity.StringCulture">

    <resultMap id="StringCulture" type="StringCulture">
        <constructor>
            <idArg column="locale" javaType="String"/>
            <arg column="value" javaType="String"/>
        </constructor>
        <id column="id" property="id"/>
    </resultMap>

    <insert id="insert" parameterType="InsertParameter">
        insert into `${table}_string_culture`(`id`, `locale`, `value`) values (#{entity.id}, #{entity.locale}, #{entity.value})
    </insert>

    <select id="find" parameterType="hashmap" resultMap="org.complitex.dictionaryfw.entity.StringCulture.StringCulture">
        SELECT sc.`id` as id, sc.`locale` as locale, sc.`value` as value FROM `${table}_string_culture` sc WHERE sc.`id` = #{string}
        ORDER BY (SELECT l.`system` FROM `locales` l WHERE l.`locale` = sc.`locale`) DESC
    </select>

    <insert id="insertDescriptionData" parameterType="StringCulture">
        insert into `string_culture`(`id`, `locale`, `value`) values (#{id}, #{locale}, #{value})
    </insert>

</mapper>
